{
    "manifest_version": 2,

    "name": "picanoo",
    "description": "upload images in background",
    "version": "1.0",

    "permissions": [
        "https://secure.flickr.com/"
    ],
    "browser_action": {
        "default_icon": "icon.png"
    },
    "background": {
        "persistent": false,
        "page": "background.html"
    },
    "content_scripts": [{
        "matches": ["http://share:1337/*"],
        "js": ["test.js"]
    }],
    "externally_connectable": {
        "matches": ["http://share:1337/*"]
    }
}