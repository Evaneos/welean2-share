<!DOCTYPE html>
<html>
<% include parts/head.ejs %>
<body>
    <div class="topbar">
        <div class="row">
            <h1 class="site-title">Picanoo</h1>
            <% if (!isnew) { %>
            <div class='header-buttons'>
                <a href="<%= links.new_album %>">
                    <span class="glyphicon glyphicon-folder-open"></span>
                </a>
                <a href="<%= links.download %>">
                    <span class="glyphicon glyphicon-download-alt"></span>
                </a>
            </div>
            <% } %>
        </div>
    </div>
    <!--
    <div class="subtitle notification"><% if (!isnew) { %>
        Let's your friends fullfill this album, send them the url!
    <% } %></div>
    -->
    <div class="row text-center">
        <% if (isnew){ %>
            <% include cover.ejs %>
        <% } %>
        <% if (error != null){ %>
            <div class="warning center-block"><%= error %></div>
        <% } %>
        <div id="mygallery">
            <% if(!isnew) { %>
                <div class="thumbnail">
                    <a href="#">
                        <span class="glyphicon glyphicon-plus"></span>
                    </a>
                </div>
            <% } %>
            <% for(var i=0; i<files.length; i++) { %>

                <% include file.ejs %>

                <% if (i == 1) { %>
                <div class="thumbnail text">
                    <p>
                        Let's your friends fullfill this album, send them the url!
                    </p>
                </div>
                <% } %>

            <% } %>
        </div>
    </div>


    <% include parts/body-footer.ejs %>

</body>
</html>
